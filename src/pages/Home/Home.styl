@import "../../styles/settings/variables.styl";
$bg-img = "../../images/hero.png";


.home {
    display: flex;
    height: 100vh;
    padding-top: 30px;
    justify-content: center;

  >.content-wrapper {
    padding: 30px 0;
    display: flex;
    flex-direction: column;
     flex-basis: 30%;
  }



  >.img-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-basis: 60%;

    >.bg-image{
      width: 100%;
      height: 100%;
      background-size: cover;
      background-repeat: no-repeat;
      background-image: url($bg-img);
    }
  }

}
