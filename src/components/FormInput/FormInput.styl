.form-input{
  display: flex;
  flex-direction: column;
  margin-bottom: 50px;

  .image-wrapper {
    display: block;
    >.icon {
      height: 75px;
      margin-bottom: 6px;
    }

  }

  >.text {
    margin-bottom: 24px;
  }

  >.select {
    border-radius: 19px;
    padding: 6px 20px;
    background-color: white;
    appearance: none;

    &:after {
     content: "a";
     font-size: 10px;
     color: #000;
     background-color: orange;
     height: 10px;
     width: 10px;
    }
  }

}
