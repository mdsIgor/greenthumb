@import "../../styles/settings/variables.styl";
@import "../../styles/settings/breakpoints.styl";

.form-input{
  display: flex;
  flex-direction: column;
  margin-bottom: 50px;

  .image-wrapper {
    display: block;
    >.icon {
      height: 75px;
      margin-bottom: 6px;
    }

  }

  .mirror {
    transform: scaleX(-1);
  }

  >.text {
    margin-bottom: 24px;
    font-size: 14px;
    color: $color-grey-text-question;
  }

  >.select {
    border-radius: 19px;
    padding: 6px 20px;
    background-color: white;
    appearance: none;
    background-image: url("../../images/downArrow.svg");
    background-repeat: no-repeat;
    background-position: right 15px top 50%;
    color: $color-grey-text-disabled;

    &:after {
     content: "a";
     font-size: 10px;
     color: #000;
     background-color: orange;
     height: 10px;
     width: 10px;
    }
  }

}
